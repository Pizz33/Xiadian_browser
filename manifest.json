{
  "manifest_version": 3,
  "name": "自动点击与输入助手",
  "version": "1.0.0",
  "description": "自动点击页面元素，遇到输入框自动输入数字1并提交",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}

